algoritmo "Par e Ímpar"
var
n:inteiro
inutil:inteiro
inicio
para inutil de 1 ate 4 faca
     escreva("Digite um valor: ")
     leia(n)
            se (n%2=0) entao
               escreval("Número Par")
               escreval("")
            senao
               escreval("Número Ímpar")
               escreval("")
            fimse
fimpara
fimalgoritmo
